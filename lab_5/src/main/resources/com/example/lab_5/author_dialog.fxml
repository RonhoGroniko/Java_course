<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.lab_5.AuthorDialogController" spacing="10"
      style="-fx-padding: 15;">
    <Label text="Добавление/редактирование автора" style="-fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Фамилия:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="surnameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Имя:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Отчество:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="patronymicField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Год рождения:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="birthDateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Страна:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="countryField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Отмена" onAction="#cancel"/>
        <Button text="Сохранить" onAction="#save"/>
    </HBox>
</VBox>